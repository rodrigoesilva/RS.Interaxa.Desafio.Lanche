@model Lanche.Application.ViewModels.IngredienteVM

@{ ViewData["Title"] = ""; }

<h2>Novo Ingrediente</h2>

<h4>Cadastro de Novo Ingrediente</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" data-val-required="O campo Nome é obrigatório." />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Preco" class="control-label"></label>
                <input class="form-control input-validation-error"
                       type="number"
                       min="0.00"
                       max="10000.00"
                       step="0.01"
                       data-val="true"
                       data-val-number="O campo Preço deve ser um número."
                       data-val-required="O campo Preço é obrigatório."
                       id="Preco"
                       name="Preco"
                       value=""
                       aria-required="true"
                       aria-describedby="Preco-error"
                       aria-invalid="true" />
                <span asp-validation-for="Preco" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                    <label asp-for="DataCadastro" class="control-label"></label>
                    <input asp-for="DataCadastro" class="form-control" />
                    <span asp-validation-for="DataCadastro" class="text-danger"></span>
                </div>*@
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/Ingrediente/ingredienteAction.js"></script>
}
