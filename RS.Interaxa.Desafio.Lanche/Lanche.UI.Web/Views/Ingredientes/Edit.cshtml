@model Lanche.Application.ViewModels.IngredienteVM

@{ ViewData["Title"] = ""; }

    <h2>Edição do Ingrediente - Código: @Model.Id</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Preco" class="control-label"></label>

                <input class="form-control input-validation-error"
                       type="number"
                       min="0.00"
                       max="10000.00"
                       step="0.01"
                       data-val="true"
                       data-val-number="O campo Preço deve ser um número."
                       data-val-required="O campo Preço é obrigatório."
                       id="Preco"
                       name="Preco"
                       value="@Model.Preco.ToString().Replace(',','.')"
                       aria-required="true"
                       aria-describedby="Preco-error"
                       aria-invalid="true" />

                <span asp-validation-for="Preco" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a asp-action="Index" class="btn btn-default">
                    <span class="glyphicon glyphicon-triangle-left"></span> Voltar para Lista
                </a>
                <button type="submit" class="btn btn-lanche">
                    <span class="glyphicon glyphicon-floppy-saved"></span> Salvar
                </button>
            </div>
        </form>
    </div>
</div>



@section Scripts {

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/Ingrediente/ingredienteAction.js"></script>

}
