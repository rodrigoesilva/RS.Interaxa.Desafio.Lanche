@model Lanche.Application.ViewModels.PromocaoVM

@{
    ViewData["Title"] = "";
}

    <h2>Edição da Promoção - Código: @Model.Id</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control input-validation-error" data-val-required="O campo Nome é obrigatório." />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <textarea asp-for="Descricao" class="form-control input-validation-error" data-val-required="O campo Descrição é obrigatório." rows="3"></textarea>
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a asp-action="Index" class="btn btn-default">
                    <span class="glyphicon glyphicon-triangle-left"></span> Voltar para Lista
                </a>
                <button type="submit" class="btn btn-lanche">
                    <span class="glyphicon glyphicon-floppy-saved"></span> Salvar
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/Ingrediente/ingredienteAction.js"></script>

}
